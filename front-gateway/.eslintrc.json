{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "jsx-a11y",
    "react"
  ],
  "extends": [
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "./node_modules/dorbel-shared/eslint.shared.json"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true,
    "node": true,
    "mocha": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  }
}
