{
  "/listings": {
    "get": {
      "summary": "List Listings",
      "description": "The Listing endpoint returns the available listings",
      "parameters": [
        {
          "name": "q",
          "in": "query",
          "description": "The listing filtering stringified JSON object",
          "type": "string"
        }
      ],
      "tags": [
        "listingController"
      ],
      "responses": {
        "200": {
          "description": "An array of apartments",
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Listing"
            }
          }
        },
        "default": {
          "description": "Unexpected error",
          "schema": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    },
    "post": {
      "summary": "Post new listing",
      "description": "Add a new listing to the system",
      "parameters": [
        {
          "name": "body",
          "in": "body",
          "schema": {
            "$ref": "#/definitions/Listing"
          }
        },
        {
          "name": "x-user-profile",
          "in": "header",
          "required": true,
          "type": "string",
          "description": "Stringified JSON object with the user's profile information"
        }
      ],
      "tags": [
        "listingController",
        "authenticated"
      ],
      "responses": {
        "201": {
          "description": "Listing created succesfully",
          "schema": {
            "$ref": "#/definitions/Listing"
          }
        },
        "default": {
          "description": "Unexpected error",
          "schema": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    }
  },
  "/listings/{listingId}" : {
    "get": {  
      "summary": "Get a single listing",
      "description": "Get a single listing with all it's details",
      "parameters": [
        {
          "name": "listingId",
          "in": "path",
          "description": "id of listing",
          "type": "integer",
          "required": true
        }
      ],
      "tags": [
        "singleListingController"
      ],
      "responses": {
        "200": {
          "description": "A listing",
          "schema": {
            "$ref": "#/definitions/Listing"
          }
        },
        "default": {
          "description": "Unexpected error",
          "schema": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    },
    "patch": {  
      "summary": "Patches a single listing",
      "description": "Patches a single listing with all it's details",
      "parameters": [
        {
          "name": "listingId",
          "in": "path",
          "description": "id of listing",
          "type": "integer",
          "required": true
        },
        {
          "name": "body",
          "in": "body",
          "schema": {
            "$ref": "#/definitions/ListingUpdate"
          }
        },
        {
          "name": "x-user-profile",
          "in": "header",
          "required": true,
          "type": "string",
          "description": "Stringified JSON object with the user's profile information"
        }
      ],
      "tags": [
        "singleListingController",
        "authenticated"
      ],
      "responses": {
        "200": {
          "description": "A listing",
          "schema": {
            "$ref": "#/definitions/Listing"
          }
        },
        "default": {
          "description": "Unexpected error",
          "schema": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    }
  }
}
