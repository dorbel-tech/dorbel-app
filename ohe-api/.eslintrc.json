{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "plugin:flowtype/recommended",
    "./node_modules/dorbel-shared/eslint.shared.json"    
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}
