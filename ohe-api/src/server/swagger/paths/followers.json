{
  "/follower": {
    "post": {
      "summary": "Follow a listing by user",
      "description": "Enables a user to follow a listing to get notified on new OHE",
      "parameters": [
        {
          "name": "body",
          "in": "body",
          "schema": {
            "$ref": "#/definitions/AddFollowRequest"
          }
        },
        {
          "name": "x-user-profile",
          "in": "header",
          "required": true,
          "type": "string",
          "description": "Stringified JSON object with the user's profile information"
        }
      ],
      "tags": [
        "followersController",
        "authenticated"
      ],
      "responses": {
        "201": {
          "description": "Follower created succesfully",
          "schema": {
            "$ref": "#/definitions/Follower"
          }
        },
        "default": {
          "description": "Unexpected error",
          "schema": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    }
  },
  "/follower/{id}": {
    "delete": {
      "summary": "Unfollow a listing by user",
      "description": "Unfollows a user from a listing in the system",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "type":"integer",
          "required": true
        },
        {
          "name": "x-user-profile",
          "in": "header",
          "required": true,
          "type": "string",
          "description": "Stringified JSON object with the user's profile information"
        }
      ],
      "tags": [
        "followersController",
        "authenticated"
      ],
      "responses": {
        "200": {
          "description": "Unfollow completed succesfully"
        },
        "default": {
          "description": "Unexpected error",
          "schema": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    }
  },
  "/followers/by-listing/{id}": {
    "get": {
      "summary": "Get followers by listing",
      "description": "Get active followers by listing id",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "type":"integer",
          "required": true
        }
      ],
      "tags": [
        "followersController"
      ],
      "responses": {
        "200": {
          "description": "Followers by listing",
          "schema": {
            "$ref": "#/definitions/Followers"
          }
        },
        "default": {
          "description": "Unexpected error",
          "schema": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    }
  }
}
