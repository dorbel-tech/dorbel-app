{
  "name": "notifications-service",
  "version": "1.1.4",
  "description": "Worker to process notifications messages from SQS and dispatch using Email or SMS",
  "main": "src/index.js",
  "scripts": {
    "start": "babel-node src/index",
    "start:dev": "yarn run check; nodemon --exec babel-node --debug=5861 src/index | bunyan -o short",
    "test": "yarn run test:unit",
    "test:unit": "nyc --all mocha --timeout 10000 --compilers js:babel-register test/shared/before-tests.js test/unit/**/*.spec.js",
    "test:integration": "mocha --timeout 10000 --compilers js:babel-register test/shared/before-tests.js test/integration/**/*.spec.js",
    "lint": "eslint --ext .js -f table src",
    "check": "satisfaction-status || yarn install"
  },
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-register": "^6.16.3",
    "co-mocha": "^1.1.3",
    "co-supertest": "0.0.10",
    "dorbel-shared": "git://github.com/dorbel-tech/dorbel-shared#v1.0.55",
    "dotenv": "^4.0.0",
    "es6-promisify": "5.0.0",
    "eslint": "^3.7.1",
    "eslint-plugin-flowtype": "^2.19.0",
    "fleek-router": "^1.2.5",
    "hamjest": "^2.13.0",
    "ical-generator": "^0.2.9",
    "koa": "1.2.5",
    "koa-bodyparser": "^2.2.0",
    "lodash": "^4.16.3",
    "mocha": "^3.1.0",
    "mock-require": "^1.3.0",
    "moment": "^2.17.1",
    "nyc": "^10.1.2",
    "request-promise": "^4.2.0",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2",
    "supertest": "^1.2.0"
  },
  "devDependencies": {
    "bunyan": "^1.8.1",
    "nodemon": "^1.10.2",
    "satisfaction": "^3.0.0"
  },
  "nyc": {
    "reporter": [
      "json"
    ],
    "include": [
      "src/**/*.{js}"
    ],
    "report-dir": "./test/coverage"
  }
}
